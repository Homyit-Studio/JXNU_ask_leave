{
	"easycom": {
			"autoscan": true,
			"custom": {
				//这两种方法都可以成功最好放在components文件下
				//"uni-(.*)":"@/components/uni/uni-$1/uni-$1.vue"
				"uni-(.*)": "@/uni_modules/uni-$1/components/uni-$1/uni-$1.vue"
			}
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "请假系统"
			}
		}
	    ,{
            "path" : "pages/studentHome/studentHome",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "学生中心",
                "enablePullDownRefresh": false
            }
        }
        ,{
            "path" : "pages/applyLeave/applyLeave",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "申请假条",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "请假系统",
		"navigationBarBackgroundColor": "#a13838",
		"backgroundColor": "#F8F8F8"
	}
}
